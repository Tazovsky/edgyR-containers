# .Rprofile -- commands to execute at the beginning of each R session
#
# You can use this file to load packages, set options, etc.
#
# NOTE: changes in this file won't be reflected until after you quit
# and start a new session

# make library directory if we're not 'root'
if (as.list(Sys.info())$user != 'root') {
  if (!dir.exists(Sys.getenv('R_LIBS_USER'))) {
    dir.create(Sys.getenv('R_LIBS_USER'), recursive = TRUE, mode = '0755')
  }
}

.libPaths(Sys.getenv('R_LIBS_USER'))

# set CRAN repo
local({
   r <- getOption("repos");
   r["CRAN"] <- "https://cloud.r-project.org/"
   options(repos=r)
})

# Get rid of png X11 errors when headless
options(bitmapType='cairo')
grDevices::X11.options(type='cairo')

# we want at least 2 GB of RAM per make job
ram_kilobytes <- system('grep MemTotal /proc/meminfo', intern = TRUE)
ram_kilobytes <- sub(pattern = "MemTotal:", replacement = "", ram_kilobytes)
ram_kilobytes <- as.numeric(sub(pattern = "kB", replacement = "", ram_kilobytes))
ram_job_limit <- ram_kilobytes %/% 2^21

# set the make job limit
Sys.setenv(MAKE = paste0("make --jobs=", min(ram_job_limit, parallel::detectCores())))
