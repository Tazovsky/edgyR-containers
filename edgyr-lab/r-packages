#! /usr/bin/env Rscript

source("~/.Rprofile")
update.packages(ask = FALSE, instlib = Sys.getenv("R_LIBS_USER"), quiet = TRUE)
install.packages(c(
  "caracas",
  "data.table",
  "IRkernel",
  "keras",
  "knitr",
  "opencpu",
  "renv",
  "rmarkdown",
  "rprojroot",
  "rTorch",
  "tidyverse",
  "torch"
), quiet = TRUE)

IRkernel::installspec()
